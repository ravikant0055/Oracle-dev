BOOK_MASTER TABLE:-

CREATE TABLE BOOK_MASTER(BOOK_ID NUMBER(6)      PRIMARY KEY,
BOOK_NAME   VARCHAR2(50),AUTHOR VARCHAR2(50),
PUBLICATION_NAME VARCHAR2(50),PUBLICATION_ADDRESS    VARCHAR2(100),
YEAR_OF_PUBLICATION  VARCHAR2(4),BOOK_CODE    NUMBER(3),
BOOK_CATEGORY    VARCHAR2(30),ADDED_ON    DATE)
/



MEMBER_MASTER TABLE:-

CREATE TABLE MEMBER_MASTER(MEMBER_ID   NUMBER(6) PRIMARY KEY,
MEMBER_NAME   VARCHAR2(50),DOB   DATE,GENDER   VARCHAR2(1),
EMAIL_ID   VARCHAR2(50),MEM_STATUS   VARCHAR2(10),
MEMBER_TYPE   VARCHAR2(1),FOREIGN KEY(MEMBER_TYPE) REFERENCES MEMBER_TYPE_DETAILS(MEMBER_TYPE))
/


TRANSACTION_MASTER TABLE:-

CREATE TABLE TRANSACTION_MASTER(TRANSACTION_ID   NUMBER(6)   PRIMARY KEY,
TRANSACTION_TYPE VARCHAR2(2),MEMBER_ID NUMBER(6),
BOOK_ID   NUMBER(6),DATE_OF_ISSUE   DATE,
EXPECTED_DATE_OF_RETURN   DATE,ACTUAL_DATE_OF_RETURN   DATE,
PENALTY    NUMBER(5,2),
FOREIGN KEY(MEMBER_ID) REFERENCES MEMBER_MASTER(MEMBER_ID),
FOREIGN KEY(BOOK_ID) REFERENCES  BOOK_MASTER(BOOK_ID))
/


MEMBER_TYPE_DETAILS TABLE:-

CREATE TABLE MEMBER_TYPE_DETAILS(MEMBER_TYPE  VARCHAR2(1)  PRIMARY KEY,
DESCRIPTION    VARCHAR2(10),
NO_OF_DAYS_ALLOWED   NUMBER(10),NO_OF_BOOKS_ALLOWED  NUMBER(2))
/


INSERT INTO MEMBER_TYPE_DETAILS VALUES('S','SILVER',5,1);
INSERT INTO MEMBER_TYPE_DETAILS VALUES('G','GOLD',10,2);
INSERT INTO MEMBER_TYPE_DETAILS VALUES('P','PLATINUM',15,3);
